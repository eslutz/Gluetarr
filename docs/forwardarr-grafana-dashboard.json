{
  "dashboard": {
    "title": "Forwardarr - Port Sync Monitor",
    "tags": ["forwardarr", "qbittorrent", "vpn"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "title": "Application Info",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "forwardarr_info",
            "legendFormat": "v{{version}} ({{commit}})",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        }
      },
      {
        "title": "Current Port",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "forwardarr_current_port",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0
          }
        }
      },
      {
        "title": "Sync Success Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(forwardarr_sync_total[5m]) / (rate(forwardarr_sync_total[5m]) + rate(forwardarr_sync_errors[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.8, "color": "yellow"},
                {"value": 0.95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "title": "Time Since Last Sync",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "time() - forwardarr_last_sync_timestamp",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 300, "color": "yellow"},
                {"value": 600, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Port Changes Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "forwardarr_current_port",
            "legendFormat": "Forwarded Port",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "always",
              "pointSize": 5
            }
          }
        }
      },
      {
        "title": "Sync Operations",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(forwardarr_sync_total[1m])",
            "legendFormat": "Successful Syncs/min",
            "refId": "A"
          },
          {
            "expr": "rate(forwardarr_sync_errors[1m])",
            "legendFormat": "Failed Syncs/min",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Failed Syncs/min"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        }
      },
      {
        "title": "Total Sync Operations",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "forwardarr_sync_total",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0
          }
        }
      },
      {
        "title": "Total Sync Errors",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 12},
        "targets": [
          {
            "expr": "forwardarr_sync_errors",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "title": "Go Memory Usage",
        "type": "timeseries",
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "go_memstats_alloc_bytes{job=~\".*forwardarr.*\"}",
            "legendFormat": "Allocated",
            "refId": "A"
          },
          {
            "expr": "go_memstats_sys_bytes{job=~\".*forwardarr.*\"}",
            "legendFormat": "System",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 1,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "title": "Go Goroutines",
        "type": "timeseries",
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "go_goroutines{job=~\".*forwardarr.*\"}",
            "legendFormat": "Goroutines",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        }
      },
      {
        "title": "Process CPU Usage",
        "type": "timeseries",
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=~\".*forwardarr.*\"}[1m])",
            "legendFormat": "CPU Usage",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        }
      }
    ]
  }
}
